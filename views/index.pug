extends layout.pug

block midNavBar
    a(class="brand-logo white-text center" id="user")

block content
    .section.no-pad-bot
        #WelcomeDiv.container
            br
            br
            h1.header.center.SecundaryText.text-lighten-2.TitleWP WofPlay
            .row.center
                h5.header.col.s12.light Juega - Compite - Disfruta
            .row.center
                a#register-button.btn-large.waves-effect.waves-light.NavBarWP.dark-1(href='/register') Registrate    
            br
            br
    #particles.parallax

block postBanner
    .conteiner 
        .section.dark
            .row
                div.col.s12.center
                    h3
                        i.mdi-content-send.brown-text
                    h6.light.white-text El recuerdo voraz, ambivalente,
                    h6.light.white-text al deceso del mar su cuerpo aflora
                    h6.light.white-text entre palabras de una voz que ora,
                    h6.light.white-text compeliendo a rendirme eternamente...

    div(id="index-banner" class="parallax-container valign-wrapper")
        .section.no-pad-bot
            .container
                .row.center
                    h3.header.col.s12.white-text.TitleWP ¿Te sientes generoso?
                    .row.center
                        form(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_top')
                            input(type='hidden', name='cmd', value='_s-xclick')
                            input(type='hidden', name='hosted_button_id', value='A79JB9UHWVEFE')
                            input(type='image', src='https://www.paypalobjects.com/es_XC/MX/i/btn/btn_donateCC_LG.gif',  width='150px', border='0', name='submit', alt='PayPal, la forma más segura y rápida de pagar en línea.')
                            img(alt='', border='0', src='https://www.paypalobjects.com/es_XC/i/scr/pixel.gif', width='20px', height='20px')
        .parallax.Tparallax
            img(src='../images/CodeImg.PNG', alt='Unsplashed background img 2')


block script
    script(src='../javascripts/jquery.particleground.min.js')
    script(src='../javascripts/init.js')
