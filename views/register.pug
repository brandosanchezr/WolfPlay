extends layout.pug

block content
    center
        h5.TitleWP.SecundaryText.text-lighten-2 Please, enter your info
        .section
        .container
            .z-depth-1.lighten-4.row.NavBarWP.log_in
                form.col.s12(class="register" method="post" action="/register" id="submit")
                    .row
                        .col.s12
                    .row
                        .input-field.col.s12
                            input.white-text.validate(type="text" name="gamerTag" id="gamerTag")
                            label(for="autocomplete-input") Enter a Game Tag
                    .row
                        .input-field.col.s12
                            input#autocomplete-input.validate.white-text(type="text" name="email")
                            label(for="autocomplete-input") Enter a Email
                    .row
                        .input-field.col.s12
                            input#password.validate.white-text(type="password" name="password")
                            label(for="password") Enter a password
                        label(style="float: right;")
                        .input-field.col.s12
                    br
                    center
                        .row
                            button.col.s12.btn.btn-large.waves-effect.waves-light.grey.darken-4(type="submit" name="btn_login") Send
    .section
    .section

block scriptPre
block script
    script(src='../javascripts/register/initRegister.js')
